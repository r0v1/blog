<%= simple_form_for @user, url: users_path, html: {class: "form-horizontal"} do |f| %>
  <%= f.input :first_name, input_html: {placeholder: "e.g. Tom"} %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <div>
    <% if @user.persisted? %>
      <p>You must enter your password to apply changes.</p>
      <%= f.input :current_password %>
    <% end %>
  </div>
  <% if @user.persisted? %>
    <p>Leave empty to keep the same password.</p>
  <% end %>
  <%= f.input :password, hint: "must be 8-16 characters" %>
  <%= f.input :password_confirmation %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
