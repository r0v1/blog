<div class="container">
  <h1>The Blog</h1>

  <p>current time: <%= @current_time %></p>

  <h2>Database</h2>
  <p> <%= @posts  %> </p>

  <h2>All Posts (<% Post.count %>)</h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td><%= button_to "View", post_path(post), method: :get %></td>
            <td><%= button_to "Edit", edit_post_path(post), method: :get %> </td>
            <td><%= button_to "Delete", post_path(post),
                method: :delete,
                data: {confirm: "Are you sure you want to delete this post?"} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <div>
  <%= link_to "Add a New Post", new_post_path %>
  </div>

  <div>
  <%= paginate @posts, theme: 'twitter-bootstrap-3' %>
  </div>
</div>
