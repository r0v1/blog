<div class="container">
  <h1>The Blog</h1>

  <h2>All Posts</h2>

    <table class="table table-bordered">
      <col style="width:20%">
      <col style="width:60%">
      <col style="width:20%">
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
            <td>
              <div style="display:inline-block">
              <%= button_to "View", post_path(post), method: :get,
                                                    class: "btn btn-success" %>
              </div>
              <div style="display:inline-block">
              <%= button_to "Edit", edit_post_path(post), method: :get,
                                                    class: "btn btn-warning" %>
              </div>
              <div style="display:inline-block">
              <%= button_to "Delete", post_path(post), method: :delete,
                                                    class: "btn btn-danger",
                data: {confirm: "Are you sure you want to delete this post?"} %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <div>
  <%= link_to "Add a New Post", new_post_path %>
  </div>

  <div>
  <%= paginate @posts_pagination, theme: 'twitter-bootstrap-3' %>
  </div>
</div>
