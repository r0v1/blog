
<div class="container">

  <%= form_for @post do |f| %>
    <div>
      <h3><%= f.label :title %></h3>
      <%= f.text_field :title, :size => 65 %>
    </div>

    <div>
      <h3><%= f.label :body %></h3>
      <%= f.text_area :body, :cols => 65, :rows => 10 %>
    </div>

    <div>
      <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name  %>
    </div>

    <div>
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
